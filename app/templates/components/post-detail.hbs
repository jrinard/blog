
<div class="well">
<div class="left-image">

</div>
<div id="right-post-detail">
  <span class="pull-left"><img src={{post.image}}/></span>
  <span class="post-title">{{post.title}}</span><br>
  <span class="">{{post.body}}</span><br><br><br><br>
  <span class="">By {{post.owner}}</span>
</div>

<h2> Comments </h2>
<ul>
  {{#each post.comments as |comment|}}
    {{comment-tile comment=comment destroyComment="destroyComment"}}
  {{/each}}
</ul>



<button class="btn btn-danger pull-right button-up"{{action 'delete' post}}>Delete</button>

</div>
